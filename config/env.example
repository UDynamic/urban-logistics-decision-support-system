# =============================================================================
# Urban Logistics Decision Support System - Environment Variables
# =============================================================================

# =============================================================================
# Database Configuration
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=urban_logistics
DB_USER=postgres
DB_PASSWORD=your_password_here
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# =============================================================================
# Redis Configuration (for caching and queues)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# =============================================================================
# Scraper Configuration
# =============================================================================
SCRAPER_PHONE_NUMBER=09130398835
SCRAPER_DELAY_BETWEEN_REQUESTS=2000
SCRAPER_MAX_CONCURRENT_BROWSERS=3
SCRAPER_HEADLESS=true
SCRAPER_TIMEOUT=30000

# Transportation Service URLs
TRANSPORT_LOGIN_URL=https://app.transport.service/login
TRANSPORT_MENU_URL=https://app.transport.service/

# =============================================================================
# API Keys (for distance/time enrichment)
# =============================================================================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
OSRM_BASE_URL=https://router.project-osrm.org/route/v1

# =============================================================================
# Backend API Configuration
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:3001
API_PORT=3001
NODE_ENV=development

# =============================================================================
# Frontend Configuration
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
FRONTEND_PORT=3000

# =============================================================================
# Authentication (for future use)
# =============================================================================
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# =============================================================================
# Monitoring and Logging
# =============================================================================
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# Queue Configuration
# =============================================================================
QUEUE_REDIS_URL=${REDIS_URL}
QUEUE_PREFIX=urban_logistics
WORKER_CONCURRENCY=5

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# Development/Production Flags
# =============================================================================
ENABLE_LOGGING=true
ENABLE_METRICS=true
ENABLE_CACHING=true 