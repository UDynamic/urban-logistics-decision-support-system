{
  "name": "urban-logistics-decision-support-system",
  "version": "1.0.0",
  "description": "Urban logistics decision support system for route optimization and analysis",
  "main": "index.js",
  "type": "module",
  "workspaces": [
    "scraper",
    "workers", 
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:scraper\" \"npm run dev:workers\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:scraper": "cd scraper && npm run dev",
    "dev:workers": "cd workers && npm run dev", 
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "db:migrate": "cd db && npm run migrate",
    "db:seed": "cd db && npm run seed",
    "setup": "npm install && npm run db:migrate && npm run db:seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "generate:routes": "node scripts/generate-routes.mjs",
    "generate:neighborhood-codes": "node scripts/generate-neighborhood-codes.mjs"
  },
  "keywords": ["urban-logistics", "route-optimization", "decision-support", "transportation", "analytics"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
